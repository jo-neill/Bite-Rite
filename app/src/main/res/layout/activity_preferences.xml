<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:visibility="visible"
    android:parentActivityName="activity_main"
    tools:context=".PreferencesActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_above="@+id/cardView6"
        android:layout_alignStart="@+id/cardView3"
        android:layout_marginBottom="11dp" >

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="60dp"
            android:layout_height="80dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/cardView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp" >

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="60dp"
            android:layout_height="80dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/cardView4"
        android:layout_marginBottom="9dp" >

        <Spinner
            android:id="@+id/spinner5"
            android:layout_width="60dp"
            android:layout_height="80dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_above="@+id/cardView3"
        android:layout_alignStart="@+id/cardView3"
        android:layout_marginBottom="10dp">

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="60dp"
            android:layout_height="80dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_above="@+id/cardView2"
        android:layout_alignStart="@+id/cardView2"
        android:layout_marginBottom="9dp">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="60dp"
            android:layout_height="80dp" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:checked="true"
            android:gravity="right" />

    </android.support.v7.widget.CardView>


</RelativeLayout>