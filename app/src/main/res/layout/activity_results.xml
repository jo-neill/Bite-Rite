<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:visibility="visible"
    android:parentActivityName="activity_main"
    tools:context=".ResultsActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/fineCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/textFineIngredients"
            android:layout_width="166dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Ingredients:" />

        <TextView
            android:id="@+id/textFine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No ingredients could be found"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/nameCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/textNameView"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:textStyle="bold"
            android:text="Name:" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Name..."
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/scoreCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/textScoreView"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:textStyle="bold"
            android:text="Score:" />

        <TextView
            android:id="@+id/textScore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:text="The score could not be calculated for this item."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </android.support.v7.widget.CardView><![CDATA[

    />

    ]]>

    <android.support.v7.widget.CardView
        android:id="@+id/badCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="9dp">

        <TextView
            android:id="@+id/textBad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="None identified"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/textBadIngredients"
            android:layout_width="166dp"
            android:layout_height="50dp"
            android:text="Bad ingredients:"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </android.support.v7.widget.CardView>

</RelativeLayout>